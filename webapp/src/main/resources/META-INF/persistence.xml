<!DOCTYPE xml>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
		http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version = "2.0">
	
	<persistence-unit name="hibernatePersistence" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hybernate.dialect" value="org.hiberante.dialect.MySQL5Dialect" />
			<property name="hybernate.hbm2ddl.auto" value="create-update" />
			<property name="hybernate.show_sql" value="true" />
		</properties>
	</persistence-unit>	
	
</persistence>